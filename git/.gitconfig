[user]
	name = Jason Long
	email = jason@jasonlong.me
	signingkey = 294F16D94B93318D
[include]
	path = /Users/jason/.gitalias.txt
[push]
	default = current
	autoSetupRemote = true
[core]
  pager = delta
	excludesfile = /Users/jason/.gitignore_global
  editor = nvim 
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  syntax-theme = Nord
  light = false
[merge]
  conflictstyle = zdiff3
[diff]
  colorMoved = default
  algorithm = histogram
[pull]
	rebase = true
[commit]
	gpgsign = true
[credential "https://github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/opt/homebrew/bin/gh auth git-credential
[init]
	defaultBranch = main
[column]
	ui = auto
[branch]
	sort = -committerdate
